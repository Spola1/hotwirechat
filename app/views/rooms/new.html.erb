<%= form_with model: @room do |f| %>
  <div class="mb-2">
    <%= f.label :title %>
  </div>

  <%= f.text_field :title, autofocus: true, required: true, placeholder: "Title...", class: "appearance-none 
    rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 
    rounded-b-md rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>

  <%= f.submit "Submit", class: 'bg-transparent hover:bg-blue-500 text-blue-700 
    font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded mt-2' %>
<% end %>
